<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tvd.customer_info.fragments.More_fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="2dp">
                <RelativeLayout
                    android:id="@+id/relative_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/img_language"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/india_map"/>
                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_toRightOf="@+id/img_language"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="Change Language"
                        android:textAlignment="viewStart"
                        android:gravity="center" />
                    <ImageView
                        android:layout_toRightOf="@+id/txt_language"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textAlignment="viewEnd"
                        android:src="@drawable/next"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="2dp">
                <RelativeLayout
                    android:id="@+id/relative_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/map_icon"/>
                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_toRightOf="@+id/img_location"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="HESCOM Offices"
                        android:textAlignment="viewStart"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_toRightOf="@+id/txt_location"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textAlignment="viewEnd"
                        android:src="@drawable/next"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <RelativeLayout
                    android:id="@+id/relative_complaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/img_complaint"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/complaint"/>
                    <TextView
                        android:id="@+id/txt_hescom_offices"
                        android:layout_toRightOf="@+id/img_complaint"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="Complaint Registration"
                        android:textAlignment="viewStart"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_toRightOf="@+id/txt_hescom_offices"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textAlignment="viewEnd"
                        android:src="@drawable/next"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
