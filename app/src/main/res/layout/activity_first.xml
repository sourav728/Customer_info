<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First">
    <LinearLayout
        android:id="@+id/lin_add_consumer"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/adddetailsbtn"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add" />
        <TextView
            android:id="@+id/txt_add_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD CONSUMER"
            android:textColor="#424242"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_down_arrow"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitStart"
        android:layout_below="@+id/lin_add_consumer"
        android:src="@drawable/down_arrow2"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/img_down_arrow"
        android:textAlignment="viewStart"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:text="@string/help_add_consumer"/>

    <LinearLayout
        android:id="@+id/lin_switch_consumer"
        android:layout_below="@+id/txt1"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/adddetailsbtn"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/acc_switch" />
        <TextView
            android:id="@+id/txt_switch_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SWITCH CONSUMER"
            android:textColor="#424242"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_below="@+id/lin_switch_consumer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitEnd"
        android:src="@drawable/right_down_arrow"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/up_arrow"
        android:textAlignment="viewEnd"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:text="Switch to particular Consumer id"/>
</RelativeLayout>